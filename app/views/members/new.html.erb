<% content_for :main do %>

  <div class="post">
    <h1>Register</h1>

    <% if @member.errors.any? %>
      <div id="errorExplanation">
        <h2><%= pluralize(@member.errors.count, "error") %> prohibited this user from being saved:</h2>
        <ul>
          <% @member.errors.ufll_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_for @member do |f| %>

      <%= f.fields_for :user do |uf| %>
        <%= uf.label :email %>
        <%= uf.text_field :email %>

        <%= uf.label :password %>
        <%= uf.text_field :password %>

        <%= uf.label :title %>
        <%= uf.select :title, options_for_select(User.titles) %>

        <%= uf.label :name, "Full name" %>
        <%= uf.text_field :name %>

      <% end %>

      <%= f.label :name_badge, "Name in the badge" %>
      <%= f.text_field :name_badge %>

      <%= f.label :institution, "Institution/Company" %>
      <%= f.text_field :institution %>

      <%= f.label :mailing_address %>
      <%= f.text_field :mailing_address %>

      <%= f.label :city %>
      <%= f.text_field :city %>

      <%= f.label :state, "Province/State" %>
      <%= f.text_field :state %>

      <%= f.label :country %>
      <%= f.text_field :country %>

      <%= f.label :zip_code %>
      <%= f.text_field :zip_code %>

      <%= f.label :phone %>
      <%= f.text_field :phone %>

      <%= f.label :fax %>
      <%= f.text_field :fax %>

      <%= f.label :need_invitation, "Need invitation?" %>
      <%= f.check_box :need_invitation %>


      <%= submit_tag "Register", :class => "button" %>


    <% end %>

  </div>

<% end %>